<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.wsfmn.habittracker.AddLocationActivity">



    <TextView
        android:id="@+id/T_coordination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_Current"
        android:gravity="center"
        android:text="Coordinates: "
        android:textSize="30sp" />



    <Button
        android:id="@+id/B_newCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Current Location" />

    <EditText
        android:id="@+id/E_newAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Address"
        android:visibility="visible" />

    <Button
        android:id="@+id/B_newEnterAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/B_Current"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="Use Entered Location" />


</RelativeLayout>