<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.wsfmn.view.ChangeLocationActivity">


    <TextView
        android:id="@+id/T_C_coordination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_C_Current"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:text="Coordinates: "
        android:textSize="30sp" />



    <Button
        android:id="@+id/B_C_Current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Current Location" />

    <EditText
        android:id="@+id/E_C_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Address"
        android:visibility="visible" />


    <Button
        android:id="@+id/B_C_New"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/B_C_Current"
        android:layout_alignEnd="@+id/E_C_address"
        android:layout_marginBottom="17dp"
        android:text="Use Entered Location" />

    <TextView
        android:id="@+id/T_C_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/B_C_New"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Address" />

    <Button
        android:id="@+id/B_C_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Confirm Change" />


</RelativeLayout>